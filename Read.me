  background-color: #fdfdfd;
  margin: 0;
  padding: 0;
  overflow: hidden;
}
section {
  width: 100%;
  display: block;
  height: 18vh;
  padding: 1vh;
  font-size: 22px;
  border-style: solid;
  border-width: 0px 0px 1px 0px;
}

